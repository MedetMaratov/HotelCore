@page
@model WebApp.Pages.Amenity.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h2>Список элементов</h2>

    <!-- Кнопка для открытия модального окна добавления элемента -->
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addModal">
        Добавить элемент
    </button>

    <!-- Таблица для отображения списка элементов -->
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        <!-- Здесь будут отображаться элементы из базы данных с использованием серверных данных -->
        <!-- Пример: -->
        <tr>
            @foreach (var amenity in Model.Amenities.Amenities)
            {
                <tr>
                    <td width="60%">@amenity.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Amenity" asp-route-Id="@amenity.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Amenity" asp-route-Id="@amenity.Id" asp-action="DeleteConfirmation" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>

                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tr>
        <!-- ... -->
        </tbody>
    </table>

    <!-- Пагинация -->
    <ul class="pagination">
        <!-- Здесь будут отображаться страницы с использованием серверных данных -->
        <!-- Пример: -->
        <li class="page-item">
            <a class="page-link" href="#">Назад</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">Вперед</a>
        </li>
        <!-- ... -->
    </ul>
</div>


</div>

<!-- Подключение Bootstrap JS и Popper.js для работы модальных окон и других компонентов -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>