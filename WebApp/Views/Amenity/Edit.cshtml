@model WebApp.Models.Amenity.EditAmenityViewModel

@{
    ViewBag.Title = "Редактирование удобств";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редактирование удобств</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <h2>Редактирование удосбтв</h2>
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label for="Title">Название:</label>
            <input asp-for="Title" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="Description">Описание:</label>
            <input asp-for="Description" class="form-control"/>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-success w-100">Изменить</button> |
        </div>
        <div class="col">
            <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> Назад</a>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>