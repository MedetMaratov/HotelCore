@model WebApp.Models.Amenity.CreateAmenityViewModel

@{
    ViewBag.Title = "Создать удобство";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Создать новое удобство номера</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <h2>Создать новое удобство номера</h2>
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="Title">Название:</label>
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Описание</label>
            <input asp-for="Description" class="form-control"/>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-success w-100">Создать</button> |
        </div>
        <div class="col">
            <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> Назад</a>
        </div>
    </form>
</div>
@section Scripts{ 

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>