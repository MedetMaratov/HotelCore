@model List<WebApp.Models.HotelBranch.HotelBranchListItemViewModel>

@{
    ViewData["Title"] = "Филиалы отелей";
    Layout = "_Layout";
}

<div class="container p-5">
    <h2>Филиалы отеля</h2>
    
    <p>
        <a asp-action="Create">Создать</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>Название</th>
            <th>Локация</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location.Country, @item.Location.City, улица @item.Location.Street, дом @item.Location.HouseNumber</td>
                <td>
                    <a href="@Url.Action("Edit", "HotelBranch", new { id = item.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "HotelBranch", new { id = item.Id })">Детали</a> |
                    <a href="@Url.Action("DeleteConfirmation", "HotelBranch", new { id = item.Id })">Удалить |</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
