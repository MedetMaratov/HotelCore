@model WebApp.Models.RoomType.RoomTypeDetailsViewModel

@{
    ViewBag.Title = "Детали вида номера";
    Layout = "_Layout";
}

<section class="breadcrumb-area  overlay-dark-2 bg-3" style="background-image: url('@Url.Content("~/images/bg/3.jpg")');">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>@ViewBag.Title</h2>
                    <p>Панель администрирования</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="room-area pt-30">
    <section class="slider-area">
        <div class="container">
            <div class="slider-wrapper">
                @for (var i = 0; i < Model.ImagePathes.Count; i++)
                {
                    <div class="single-slide">
                        <img src="/images/roomType/@Model.ImagePathes[i]" class="img-fluid" alt="...">
                    </div>
                }
            </div>
        </div>
    </section>
    <div class="container pt-30 pb-30">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4>Название</h4>
                    <p>@Model.Title</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h4>Описание</h4>
                    <p>@Model.Description</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h4>Вместимость (человек)</h4>
                    <p>@Model.MaxCapacity</p>
                </div>
                <div class="col">
                    <h4>Цена за сутки</h4>
                    <p>@Model.NightlyRate</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h4>Удобства</h4>
                    <p>@string.Join("; ", Model.Amenities).</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Activate the carousel
        $('.carousel').carousel();
    </script>
}